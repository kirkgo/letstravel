<p id="notice"><%= notice %></p>

<h1>Trips</h1>

<div>
  <%= render 'search', trips: @trips %>
</div>

<table>
  <thead>
    <tr>
      <th>Bus Code</th>
      <th>Departure</th>
      <th>Arrival</th>
      <th>Departure Date</th>
      <th>Seats Available</th>
      <th>Extra Luggage?</th>
      <th>Price</th>
      <th>Option</th>
    </tr>
  </thead>

  <tbody>
    <% @trips.each do |trip| %>
    <tr>
      <td><%= trip.bus.bus_code %></td>
      <td><%= trip.departure.name %></td>
      <td><%= trip.arrival.name %></td>
      <td><%= day_and_time(trip) %></td>
      <td><%= trip.bus.seats %></td>
      <td><%= permit_extra_luggage(trip) %></td>
      <td><%= price(trip) %></td>
      <td><%= link_to 'Book It!', "#" %></td>
    </tr>
    <% end %>
  </tbody>
</table>

