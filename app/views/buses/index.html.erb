<h1>Buses</h1>

<table>
  <thead>
    <tr>
      <th>Bus code</th>
      <th>Extra luggage</th>
      <th>Seats</th>
      <th>Seat price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @buses.each do |bus| %>
      <tr>
        <td><%= bus.bus_code %></td>
        <td><%= bus.extra_luggage %></td>
        <td><%= bus.seats %></td>
        <td><%= bus.seat_price %></td>
        <td><%= link_to 'Show', bus %></td>
        <td><%= link_to 'Edit', edit_bus_path(bus) %></td>
        <td><%= link_to 'Destroy', bus, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bus', new_bus_path %>
